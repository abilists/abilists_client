<?xml version="1.0" encoding="UTF-8" ?>
<config>

	<slavedb>
		<cnt>2</cnt>
	</slavedb>

	<paging>
		<row>
			<ten>10</ten>
			<twenty>20</twenty>
			<thirty>30</thirty>
		</row>
		<limit>
			<total>2000</total>
		</limit>
	</paging>

	<default>
		<img>
			<user>/static/apps/img/defaultUser.png</user>
			<bg>/static/apps/img/defaultBg01.png</bg>
		</img>
		<abilists>
			<five>5</five>
			<three>3</three>
		</abilists>
	</default>

	<upload>
		<path>
			<img>
				<avatar>/.abilists/img/avatar/</avatar>
				<bg>/.abilists/img/bg/</bg>
				<temp>/.abilists/img/temp/</temp>
			</img>
			<files>/.abilists/files/</files>
		</path>
	</upload>

	<files>
		<file>
			<ext>aac</ext>
			<ext>ace</ext>
			<ext>ai</ext>
			<ext>aut</ext>
			<ext>avi</ext>
			<ext>bin</ext>
			<ext>bmp</ext>
			<ext>cad</ext>
			<ext>cdr</ext>
			<ext>css</ext>
			<ext>db</ext>
			<ext>dmg</ext>
			<ext>doc</ext>
			<ext>docx</ext>
			<ext>dwf</ext>
			<ext>dwg</ext>
			<ext>eps</ext>
			<ext>exe</ext>
			<ext>flac</ext>
			<ext>gif</ext>
			<ext>hlp</ext>
			<ext>htm</ext>
			<ext>html</ext>
			<ext>ini</ext>
			<ext>iso</ext>
			<ext>java</ext>
			<ext>jpg</ext>
			<ext>js</ext>
			<ext>mkv</ext>
			<ext>mov</ext>
			<ext>mp3</ext>
			<ext>mp4</ext>
			<ext>pdf</ext>
			<ext>php</ext>
			<ext>png</ext>
			<ext>ppt</ext>
			<ext>ps</ext>
			<ext>psd</ext>
			<ext>rar</ext>
			<ext>rss</ext>
			<ext>rtf</ext>
			<ext>svg</ext>
			<ext>swf</ext>
			<ext>sys</ext>
			<ext>tiff</ext>
			<ext>txt</ext>
			<ext>xls</ext>
			<ext>xlsx</ext>
			<ext>zip</ext>
		</file>
	</files>

	<template>
		<users>
			<from>
				<path>templates/temp/abilists</path>
				<filename>users.ftlh</filename>
			</from>
			<to>
				<path>templates/temp/abilists/</path>
				<filename>users.ftlo</filename>
			</to>		
		</users>
		<projects>
			<from>
				<path>templates/temp/abilists</path>
				<filename>projects.ftlh</filename>
			</from>
			<to>
				<path>templates/temp/abilists/</path>
				<filename>projects.ftlo</filename>
			</to>
		</projects>
		<reports>
			<from>
				<path>templates/temp/abilists</path>
				<filename>reports.ftlh</filename>
			</from>
			<to>
				<path>templates/temp/abilists/</path>
				<filename>reports.ftlo</filename>
			</to>
		</reports>
		<noti>
			<from>
				<path>templates/temp/abilists</path>
				<filename>noti.ftlh</filename>
			</from>
			<to>
				<path>templates/temp/abilists/</path>
				<filename>noti.ftlo</filename>
			</to>
		</noti>
	</template>

	<email>
		<from>
			<address>heyguybug@gmail.com</address>
		</from>
		<to>
			<address>abilists@gmail.com</address>
		</to>
		<id>heyguybug@gmail.com</id>
		<pwd></pwd>
		<signup>
			<path>WEB-INF/classes/template/apps/email</path>
			<filename>signup.ftlh</filename>
			<outfile>WEB-INF/classes/template/apps/email/signup.ftl</outfile>
			<url>http://www.abilists.com/login/confirmSingup</url>
		</signup>
		<resetpwd>
			<path>WEB-INF/classes/template/apps/email</path>
			<filename>resetpwd.ftlh</filename>
			<outfile>WEB-INF/classes/template/apps/email/resetpwd.ftl</outfile>
			<url>http://www.abilists.com/login/resetPwd</url>
		</resetpwd>
		<request>
			<title>This is a request from guest.</title>
			<path>WEB-INF/classes/template/apps/email</path>
			<filename>request.ftlh</filename>
			<outfile>WEB-INF/classes/template/apps/email/request.ftl</outfile>
		</request>
	</email>

	<login>
		<userid>
			<length>
				<min>3</min>
			</length>
		</userid>
		<seedkey>
			<path>WEB-INF/classes/application.properties</path>
			<filename>application.properties</filename>
		</seedkey>
	</login>

	<system>
		<environment>Staging</environment>
	</system>

</config>