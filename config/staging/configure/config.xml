<?xml version="1.0" encoding="UTF-8" ?>
<config>

	<slavedb>
		<cnt>2</cnt>
	</slavedb>

	<paging>
		<row>
			<ten>10</ten>
			<tenfive>15</tenfive>
			<twenty>20</twenty>
			<twentyfive>25</twentyfive>
			<thirty>30</thirty>
			<thirtyfive>35</thirtyfive>
		</row>
		<limit>
			<total>2000</total>
		</limit>
	</paging>

	<default>
		<img>
			<user>/static/apps/img/defaultUser.png</user>
			<bg>/static/apps/img/defaultBg01.png</bg>
		</img>
		<abilists>
			<five>5</five>
			<three>3</three>
		</abilists>
	</default>

	<upload>
		<path>
			<img>
				<avatar>/img/avatar/</avatar>
				<bg>/img/bg/</bg>
				<posts>/img/posts/</posts>
				<temp>/img/temp/</temp>
			</img>
			<files>/files/</files>
			<temp>
				<plugins>/temp/plugins/</plugins>
				<posts>/temp/posts/</posts>
			</temp>
			<resumes>/resumes/</resumes>
		</path>
	</upload>

	<files>
