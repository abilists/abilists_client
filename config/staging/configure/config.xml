	<template>
		<plugins>
			<from>
				<path>templates/temp/abilists</path>
				<filename>plugins.ftlh</filename>
			</from>
			<to>
				<path>templates/temp/abilists/</path>
				<filename>plugins.ftlo</filename>
			</to>		
		</plugins>
		<noti>
			<greeting>
				<ko>templates/temp/greeting_ko.txt</ko>
				<en>templates/temp/greeting_en.txt</en>
				<ja>templates/temp/greeting_ja.txt</ja>
			</greeting>
		</noti>
	</template>

	<email>
		<!-- Not used -->
		<from>
			<address>heyguybug@gmail.com</address>
		</from>
		<to>
			<address>abilists@gmail.com</address>
		</to>
		<!-- Not used -->
		<id>heyguybug@gmail.com</id>

		<pwd></pwd>
		<signup>
			<path>templates/apps/email</path>
			<filename>signup.ftlh</filename>
			<outfile>templates/apps/email/signup.ftl</outfile>
			<url>http://localhost/login/confirmSingup</url>
		</signup>
		<resetpwd>
			<path>templates/apps/email</path>
			<filename>resetpwd.ftlh</filename>
			<outfile>templates/apps/email/resetpwd.ftl</outfile>
			<url>http://localhost:8081/login/resetPwd</url>
		</resetpwd>
	</email>

	<login>
		<userid>
			<length>
				<min>3</min>
			</length>
		</userid>
		<seedkey>
			<path>WEB-INF/classes/application.properties</path>
			<filename>application.properties</filename>
		</seedkey>
	</login>

	<plugins>
		<download>
			<url>https://github.com/minziappa/abilists_plugins/raw/master/plugins/</url>
		</download>
		<api>
			<url>http://dev.abilists.com:9001</url>
		</api>
	</plugins>

	<system>
		<environment>Staging</environment>
	</system>

